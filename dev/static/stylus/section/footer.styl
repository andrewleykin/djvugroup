.footer
    background-color: #353c40
    padding: 80px 0 90px
    display flex
    flex-direction: column
    justify-content: center
    align-items: center
    text-align: center
    @media(max-width: $breakpoint-xl)
        padding: 50px 0 60px
    @media(max-width: $breakpoint-l) 
        padding 30px 0
    
.footer__content
    display flex
    flex-direction: column
    justify-content: center
    align-items: center
    text-align: center

.footer__text
    display flex
    flex-direction: column
    align-items: center
    font-family: 'Montserrat';
    font-size: 18px;
    font-weight: normal;
    line-height: 1.56;
    letter-spacing: 0.27px;
    color #fff
    @media(max-width: $breakpoint-xl)
        font-size 16px
        line-height 22px
    @media(max-width: $breakpoint-l)  
        font-size 14px
        line-height 20px
.footer__logo
    width: 155px
    margin-bottom 15px
    height 94px
    @media(max-width: $breakpoint-xl)
        width 130px
        height 80px
    @media(max-width: $breakpoint-l)
        width 100px
        height 60px
    & img 
        width 100%