.header__content
    display flex
    justify-content: space-between
    height: 145px
    align-items: center
    @media(max-width: $breakpoint-l)
        padding 27px 0
        height auto
    @media(max-width: $breakpoint-m)
        padding 15px 0
        flex-direction: column


.header__logo
    width: 155px
    height 94px
    @media(max-width: $breakpoint-xl)
        width 130px
        height 80px
    @media(max-width: $breakpoint-l)
        width 100px
        height 60px

.header__logo-img
    width 100%

.header__menu
    display flex
    align-items: center
    height 100%

.header__list
    display flex
    height 100%
    @media(max-width: $breakpoint-l)
        flex-wrap: wrap
        justify-content: center
        padding: 20px 0;
        align-items: center;
        width 500px
    @media(max-width: $breakpoint-m)
        width 300px
        padding: 10px 0
    @media(max-width: $breakpoint-s)
        width 280px
.header__item
    margin-right 70px
    height 100%
    display flex
    align-items: center
    &:last-child
        margin-right 15px
        @media(max-width: $breakpoint-xl)
            margin-right 10px
        @media(max-width: $breakpoint-l)
            margin-right 0px
    &:hover 
        border-bottom: 5px solid #bd2c1f
        border-top 5px solid #fff
        @media(max-width: $breakpoint-l)
            border: none 
    @media(max-width: $breakpoint-xl)
        margin-right 28px
    @media(max-width: $breakpoint-l)
        margin-right 0px
        width: 33%
        height auto
        display: flex
        justify-content: center
    @media(max-width: $breakpoint-m)
        width 50%

.header__item-text
    font-family: 'Montserrat'
    font-size 15px
    line-height 27px
    font-weight 700
    text-transform: uppercase
    @media(max-width: $breakpoint-xl)
        font-size 14px
    @media(max-width: $breakpoint-l)
        font-size 12px
    @media(max-width: $breakpoint-m)
        font-size 10px
.header__search
    width: 32px;
    height: 32px;
    cursor pointer
    @media(max-width: $breakpoint-xl)
        width 26px
        height 26px
    @media(max-width: $breakpoint-l)
        width 22px
        height 22px
    @media(max-width: $breakpoint-m)
        width 18px
        height 18px
        margin-right 5px
    & svg 
        width 100%
        height 100%

.header__tel-number
    font-family: 'Montserrat'
    font-size 26px
    line-height 27px
    font-weight 700
    @media(max-width: $breakpoint-xl)
        font-size 18px
    @media(max-width: $breakpoint-l)
        font-size 16px
    @media(max-width: $breakpoint-m)
        font-size 12px