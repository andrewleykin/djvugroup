
.about .container
    display flex
    padding-top 111px
    background: url(../img/content/excavator.png) no-repeat
    background-position: 213px 82px
    margin-bottom 70px
    display flex
    justify-content: space-between
    @media(max-width: $breakpoint-xl)
        background-size: 50%
        margin-bottom 0px
        padding 111px 20px 20px
    @media(max-width: $breakpoint-l)
        background-size: 30%  
        padding 80px 20px 15px
        background: none
    @media(max-width: $breakpoint-m)
        background-size: 40%
        padding 50px 20px 15px
        flex-direction: column
    @media(max-width: $breakpoint-s)
        padding: 30px 20px 15px
.about__content
    display flex
    flex-direction: column

.about__icon
    width: 130px;
    height 100px
    margin-bottom 36px
    @media(max-width: $breakpoint-xl)
        width 110px
        height 80px
        margin-bottom 25px
    @media(max-width: $breakpoint-l)  
        width 100px
        height 70px
        margin-bottom 30px
    @media(max-width: 1040px)
        width 90px
        height 60px
    @media(max-width: $breakpoint-s)
        width 70px
        height 50px
        margin-bottom 20px
    & svg 
        width 100%
        height 100%

.about__title
    font-family: Montserrat;
    font-size: 42px;
    font-weight: 700;
    line-height: 1
    letter-spacing: 1.05px
    margin-bottom 70px
    @media(max-width: $breakpoint-xl)
        font-size 36px
        margin-bottom 50px
    @media(max-width: $breakpoint-l)  
        font-size 30px
        margin-bottom 40px
    @media(max-width: 1040px)
        font-size 28px
        margin-bottom 20px

.about__inf
    width 1200px
    @media(max-width: $breakpoint-xl)
        width 800px
    @media(max-width: $breakpoint-l)  
        width 600px
    @media(max-width: 1040px)
        width 500px
    @media(max-width: $breakpoint-m)
        width 100%
.about__inf-item
    width 40%
    margin-bottom 40px
    margin-right 117px
    float left
    &:first-child
        margin-bottom: 0
    @media(max-width: $breakpoint-xl)
        width 43%
        margin-bottom 44px
        margin-right 50px
    @media(max-width: $breakpoint-l)  
        margin-bottom 25px
        margin-right 30px
    @media(max-width: $breakpoint-m)
        margin-bottom 40px
    @media(max-width: $breakpoint-s)
        margin-bottom 10px
        width 100%
.about__inf-text
    font-size 18px
    line-height 28px
    font-family: 'Montserrat'
    font-weight: normal
    @media(max-width: $breakpoint-xl)
        font-size 16px
        line-height 22px
    @media(max-width: $breakpoint-l)  
        font-size 14px
        line-height 20px
    @media(max-width: $breakpoint-s)
        font-size 10px
        line-height 16px

.about__partners-list
    display flex
    flex-wrap: wrap
    justify-content: space-between
    @media(max-width: $breakpoint-xl)
        width 350px
    @media(max-width: 1040px)
        width 250px
    @media(max-width: $breakpoint-m)
        width 100%  


.about__partners-item
    width: 50%
    height 80px
    display flex
    justify-content: center
    align-items: center
    margin-bottom 60px
    @media(max-width: $breakpoint-xl)
        margin-bottom 30px
        transform: scale(0.8)
    @media(max-width: $breakpoint-l)  
        margin-bottom 25px
    @media(max-width: 1040px)
        margin-bottom 20px
    @media(max-width: $breakpoint-m)
        width 33%
        
